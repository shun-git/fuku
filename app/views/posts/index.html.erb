<div class="post-index-wrapper">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="post-index-single">
            <h2 class="post-author">
              <%= post.user.name %>
            </h2>
            <%= image_tag post.image.url %>
            <%= image_tag '#', class: 'post-index-icon' %>
            <%= image_tag '#', class: 'post-index-icon' %>
            <p class="post-text">
              <%= post.description %>
            </p>
          </div>
        </div>
      </div>
      <%= link_to '削除', "/posts/#{post.user_id}", method: :delete %>
    <% end %>
  </div>
</div>
