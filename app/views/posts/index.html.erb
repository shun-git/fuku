<h1 class="posts-h1">閲覧ページ</h1>
<h2 class="posts-h2">よく見られている順</h2>
<h2 class="posts-h2">製品名検索</h2>
<h2 class="posts-h2">カテゴリ検索</h2>
<div class="post-index-wrapper">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="post-index-single">
            <h2 class="post-author">
              <%= post.user.name %>
            </h2>

            <%= image_tag post.image.url %>

            <p class="post-text">
              <%= post.description %>
            </p>
          </div>
        </div>
      </div>
      <button class="btn btn-success post-index-btn"><%= link_to("編集", "/posts/#{post.id}/edit") %></button>

      <button class="btn btn-danger post-index-btn"><%= link_to '削除', "/posts/#{post.id}", method: :delete %></button>
    <% end %>
  </div>
</div>
